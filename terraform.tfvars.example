# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# Required: Your SSH public key
ssh_public_key = "ssh-ed25519 AAAA..."

# Recommended: Restrict SSH to your IP only
# Find your IP: curl ifconfig.me
allowed_ssh_cidrs = ["YOUR.IP.ADDRESS/32"]

# Recommended: Email for spot interruption notifications
notification_email = "you@example.com"

# Spot instances (default: enabled for ~70% cost savings)
# use_spot              = true
# spot_max_price        = ""    # Empty = on-demand price cap
# spot_restart_attempts = 5

# Schedule (default: 5am-11pm Mountain Time)
# enable_schedule   = true
# schedule_start    = "0 5 * * ? *"   # 5am
# schedule_stop     = "0 23 * * ? *"  # 11pm
# schedule_timezone = "America/Denver"

# Optional overrides
# aws_region              = "us-east-1"
# instance_type           = "m7a.xlarge"
# volume_size             = 100
# volume_throughput       = 250
# hostname                = "aws-dev-box"
# snapshot_retention_days = 7
