# Optional configuration overrides
# Copy to terraform.tfvars or set via environment variables
#
# NOTE: Secrets (tailscale_auth_key) are managed via sops
#       Run: sops secrets.yaml

# Emails for spot interruption notifications
notification_emails = ["your-email@example.com", "your-work-email@example.com"]

# Tailscale hostname (default: devbox)
# tailscale_hostname = "devbox"

# Spot instances (default: enabled for ~70% cost savings)
# use_spot              = true
# spot_max_price        = ""    # Empty = on-demand price cap
# spot_restart_attempts = 5

# Schedule (default: 5am-11pm Mountain Time)
# enable_schedule   = true
# schedule_start    = "0 5 * * ? *"   # 5am
# schedule_stop     = "0 23 * * ? *"  # 11pm
# schedule_timezone = "America/Denver"

# Instance configuration
# aws_region              = "us-east-1"
# instance_type           = "m7a.xlarge"
# volume_size             = 100
# volume_throughput       = 250
# hostname                = "aws-dev-box"
# snapshot_retention_days = 7
